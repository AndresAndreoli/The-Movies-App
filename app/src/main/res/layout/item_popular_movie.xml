<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llMovieContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/ivImageMain"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pc_poster" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitleMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleMovieHome"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_500"
            android:textSize="20sp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="7dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionMovieHome"
            android:fontFamily="@font/nunito_400"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginHorizontal="5dp" />


    </LinearLayout>
</layout>